{
  "name": "rodeo",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "build": {
    "extraResources": [
      {
        "from": "src/core/db/migrations",
        "to": "migrations"
      }
    ]
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "seed:tournament": "tsx --tsconfig tsconfig.node.json scripts/seed-tournament.ts",
    "seed:tournament:electron": "ELECTRON_RUN_AS_NODE=1 node_modules/.bin/electron node_modules/.bin/tsx --tsconfig tsconfig.node.json scripts/seed-tournament.ts",
    "test": "ELECTRON_RUN_AS_NODE=1 electron node_modules/vitest/vitest.mjs run",
    "test:ci": "vitest run",
    "test:watch": "ELECTRON_RUN_AS_NODE=1 electron node_modules/vitest/vitest.mjs",
    "coverage": "ELECTRON_RUN_AS_NODE=1 electron node_modules/vitest/vitest.mjs run --coverage",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "db:gen": "drizzle-kit generate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "^4.1.15",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.1",
    "drizzle-orm": "^0.44.7",
    "electron-updater": "^6.3.9",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.24",
    "fuzzysort": "^3.1.0",
    "papaparse": "^5.5.3",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.5",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.15",
    "ulid": "^3.0.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.18.12",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "drizzle-kit": "^0.31.5",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.6",
    "vitest": "^4.0.1"
  }
}
